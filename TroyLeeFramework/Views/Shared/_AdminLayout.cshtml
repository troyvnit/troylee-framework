<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="description" />
    <meta content="" name="author" />
    <link href="@Url.Content("~/HTMLFramework/AdminLab/assets/bootstrap/css/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/HTMLFramework/AdminLab/assets/bootstrap/css/bootstrap-responsive.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/HTMLFramework/AdminLab/assets/bootstrap/css/bootstrap-fileupload.css")" rel="stylesheet" />
    <link href="@Url.Content("~/HTMLFramework/AdminLab/assets/font-awesome/css/font-awesome.css")" rel="stylesheet" />
    <link href="@Url.Content("~/HTMLFramework/AdminLab/css/style.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/HTMLFramework/AdminLab/css/style_responsive.css")" rel="stylesheet" />
    <link href="@Url.Content("~/HTMLFramework/AdminLab/css/style_default.css")" rel="stylesheet" id="style_color" />
    <link href="@Url.Content("~/HTMLFramework/AdminLab/assets/chosen-bootstrap/chosen/chosen.css")" rel="stylesheet" />
    <link href="@Url.Content("~/HTMLFramework/AdminLab/assets/fancybox/source/jquery.fancybox.css")" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/HTMLFramework/AdminLab/assets/uniform/css/uniform.default.css")" />
    <link href="@Url.Content("~/HTMLFramework/KendoUI/content/shared/styles/examples-offline.css")" rel="stylesheet" />
    <link href="@Url.Content("~/HTMLFramework/KendoUI/styles/kendo.common.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/HTMLFramework/KendoUI/styles/kendo.default.min.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/HTMLFramework/AdminLab/js/jquery-1.8.3.min.js")"></script>
    <script src="@Url.Content("~/HTMLFramework/AdminLab/assets/bootstrap/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/HTMLFramework/AdminLab/js/jquery.blockui.js")"></script>
    <!--[if lt IE 9]><script src="/js/excanvas.js"></script><script src="/js/respond.js"></script><![endif]-->
    <script src="@Url.Content("~/HTMLFramework/AdminLab/assets/chosen-bootstrap/chosen/chosen.jquery.min.js")"></script>
    <script src="@Url.Content("~/HTMLFramework/AdminLab/assets/uniform/jquery.uniform.min.js")"></script>
    <script src="@Url.Content("~/HTMLFramework/AdminLab/js/scripts.js")"></script>
    <script>$(document).ready(function () { App.init(); });</script>
    <script src="@Url.Content("~/HTMLFramework/KendoUI/js/kendo.web.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/HTMLFramework/AdminLab/assets/fancybox/source/jquery.fancybox.pack.js")"></script>
    <meta http-equiv=" content-type" content="text/html; charset=utf-8" />
</head>
<body class="fixed-top">
    <div id="header" class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="brand" href="./index.html">
                    <img src="./img/logo.png" alt="Admin Lab" />
                </a>
                <a class="btn btn-navbar collapsed" id="main_menu_trigger" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="arrow"></span>
                </a>
                <div class="top-nav ">
                    <ul class="nav pull-right top-menu">
                        <li class="dropdown mtop5"><a class="dropdown-toggle element" data-placement="bottom" data-toggle="tooltip" href="#" data-original-title="Chat"><i class="icon-comments-alt"></i></a></li>
                        <li class="dropdown mtop5"><a class="dropdown-toggle element" data-placement="bottom" data-toggle="tooltip" href="#" data-original-title="Help"><i class="icon-headphones"></i></a></li>
                        @if (Request.IsAuthenticated)
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <img src="./img/avatar1_small.jpg" alt="" /><span class="username">@User.Identity.Name</span><b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#"><i class="icon-user"></i>My Profile</a></li>
                                    <li><a href="#"><i class="icon-tasks"></i>My Tasks</a></li>
                                    <li><a href="#"><i class="icon-calendar"></i>Calendar</a></li>
                                    <li class="divider"></li>
                                    <li>
                                        <a href="javascript:document.getElementById('logoutForm').submit()"><i class="icon-key"></i>Log off</a>
                                        @using (Html.BeginForm("AdminLogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                        {
                                            @Html.AntiForgeryToken()
                                        }
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="container" class="row-fluid">
        <div id="sidebar" class="nav-collapse collapse">
            <div class="sidebar-toggler hidden-phone"></div>
            <div class="navbar-inverse">
                <form class="navbar-search visible-phone">
                    <input type="text" class="search-query" placeholder="Search" />
                </form>
            </div>
            <ul class="sidebar-menu">
                <li class="has-sub active">
                    <a href="javascript:;" class=""><span class="icon-box"><i class="icon-file-alt"></i></span>NỘI DUNG <span class="arrow"></span></a>
                    <ul class="sub">
                        <li class="active"><a class="" href="@Url.Action("Index", "File")">BÀI VIẾT</a></li>
                        <li><a class="" href="@Url.Action("Index", "File")">HÌNH ẢNH</a></li>
                    </ul>
                </li>
                @if (Request.IsAuthenticated)
                {
                    <li><a class="" href="javascript:document.getElementById('logoutForm').submit()"><span class="icon-box"><i class="icon-user"></i></span>ĐĂNG XUẤT</a></li>
                }
                else
                {
                    <li><a class="" href="@Url.Action("AdminLogin", "Account")"><span class="icon-box"><i class="icon-user"></i></span>ĐĂNG NHẬP</a></li>
                }
            </ul>
        </div>
        <div id="main-content">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>
    <div id="footer">2013 &copy; Admin Lab Dashboard.
        <div class="span pull-right"><span class="go-top"><i class="icon-arrow-up"></i></span></div>
    </div>
</body>
</html>
